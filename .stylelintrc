{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order"
    ],
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "rules": {
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["extend"]
        }],
        "indentation": "tab"
    }
}